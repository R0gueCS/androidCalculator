<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/inputBg"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@string/defaultValue"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="12"
            android:textColor="@color/id"
            android:textSize="45dp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/calcBg">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bb_c"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="C"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_leftParenthese"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="("
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_rightParenthese"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text=")"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_div"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="รท"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bb_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_mult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="ร"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bb_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="-"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bb_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="3"
                android:textSize="20sp" />
            <Button
                android:id="@+id/bb_plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="+"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/bb_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bb_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/invisible"
                android:text="."
                android:textSize="20sp" />


            <Button
                android:id="@+id/bb_equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/invisible"
                android:text="="
                android:textSize="30sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>